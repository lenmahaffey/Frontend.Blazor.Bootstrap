<div @attributes="attributes" class="modal fade hide" role="dialog" id="@Id" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">@Title</h5>
            <button type="button" @onclick="Cancel" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            <button id="confirmClose" type="button" class="btn-close" data-bs-dismiss="modal" hidden></button>
      </div>
      <div class="modal-body">
        @Message
      </div>
      <div class="modal-footer">
        <button type="button" @onclick="Cancel" class="btn no" data-bs-dismiss="modal">@CancelButtonText</button>
        <button type="button" @onclick="Ok" class="btn yes">@OkButtonText</button>
      </div>
    </div>
  </div>
</div>