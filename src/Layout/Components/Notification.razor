<div id="@Id" class="@(AnimationClass)">
    <div class="toast show" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="toast-header @(SetBorderColor())">
            @switch(Message?.Type)
            {
                case MessageType.Error:
                    <i class="fa-solid fa-circle-xmark fa-xl me-2 text-danger"></i>
                    break;

                case MessageType.Warning:
                    <i class="fa-solid fa-circle-exclamation fa-xl me-2 text-warning"></i>
                    break;

                case MessageType.Success:
                    <i class="fa-solid fa-circle-check fa-xl me-2 text-success"></i>
                    break;
            }
            <strong class="me-auto">@Message?.Title</strong>
            <small class="text-muted">@Message?.Time.ToShortTimeString()</small>
            <button type="button" class="btn-close btn-dark" @onclick="hideNotification"></button>
        </div>
        <div class="toast-body">
            @Message?.Text
        </div>
    </div>
</div>
